@model IEnumerable<DataBaseUniv.Models.Task>

@{
    ViewData["Title"] = "Простий запит 5";
}

<h1>Простий запит 5</h1>

<p>
    <a asp-action="Index">Повернутися назад</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourceId)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourceId)
            </td>
        </tr>
}
    </tbody>
</table>
